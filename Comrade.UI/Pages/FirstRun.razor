@page "/firstrun"
@inject NavigationManager NavigationManager

<PageTitle>@Title</PageTitle>

<MudContainer Class="mt-16" MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">@Title</MudText>

    <MudGrid Justify="Justify.Center">
        <MudItem>
            <MudButton Size="Size.Large" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" Href="@Routes.Pair">Pair</MudButton>
        </MudItem>
    </MudGrid>
</MudContainer>


@code {
    private string Title = "First run";

}