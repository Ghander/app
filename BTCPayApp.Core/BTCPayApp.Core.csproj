    </PropertyGroup>

    <PropertyGroup>
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <Content Include="runtimes/libldk_node.aar" Link="runtimes/libldk_node.aar" Pack="true" PackagePath="runtimes/libldk_node.aar" />
