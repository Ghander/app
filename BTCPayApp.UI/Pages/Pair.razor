@page "/pair"
@inject IDispatcher Dispatcher
@using BTCPayApp.Core
@using BTCPayApp.UI.Features
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<PageTitle>Pair with your BTCPay Server</PageTitle>

<MudText Typo="Typo.h5" Class="mb-4">Pair with your BTCPay Server</MudText>

<PairBTCPayServer OnPair="OnPair"></PairBTCPayServer>

@code {
    private void OnPair(BTCPayPairConfig obj)
    {
        Dispatcher.Dispatch(new RootState.PairConfigLoadedAction(obj));
    }
}
