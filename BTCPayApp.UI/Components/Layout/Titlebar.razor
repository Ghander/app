<section id="Titlebar" class="container d-flex align-items-center justify-content-between py-3 @(Fixed ? "fixed" : null)">
    <div class="titlebar-start">
        @if (!string.IsNullOrEmpty(BackLink) || Back)
        {
            <a class="btn-icon" href="@(BackLink ?? "#")" onclick="@(string.IsNullOrEmpty(BackLink) ? "history.back();return false;" : null)">
                <Icon Symbol="back"/>
            </a>
        }
    </div>
    <div class="titlebar-center">
        @ChildContent
    </div>
    <div class="titlebar-end">
        <SectionOutlet SectionId="End" />
    </div>
</section>

@code {
    public static readonly SectionOutlet End = new();

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? BackLink { get; set; }

    [Parameter]
    public bool Back { get; set; }

    [Parameter]
    public bool Fixed { get; set; } = true;
}
