<svg @attributes="InputAttributes" role="img" class="@CssClass">
    <use href="#@Symbol" />
</svg>

@code {
	[Parameter, EditorRequired]
	public string? Symbol { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? InputAttributes { get; set; }

    private string CssClass => $"icon icon-{Symbol} {(InputAttributes?.ContainsKey("class") is true ? InputAttributes["class"] : "")}".Trim();
}
