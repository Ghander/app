@using BTCPayApp.UI.Features
@inherits Fluxor.Blazor.Web.Components.FluxorLayout
@inject IState<UIState> UiState

<div id="SimpleLayout" class="layout">
    <SectionOutlet SectionName="top" />
    @if (!string.IsNullOrEmpty(UiState.Value.LogoUrl))
    {
        <div>
            <img src="@UiState.Value.LogoUrl" alt="@(UiState.Value.ServerName ?? "BTCPay Server")" class="logo" />
        </div>
    }
    else
    {
        <img src="_content/BTCPayApp.UI/img/logo-symbol.svg" alt="BTCPay Server" class="logo"/>
    }
    <main id="MainContent">
        <div class="container">
            <SectionOutlet SectionName="main-top"/>
            @Body
            <SectionOutlet SectionName="main-bottom"/>
        </div>
    </main>
    <SectionOutlet SectionName="bottom" />
</div>
